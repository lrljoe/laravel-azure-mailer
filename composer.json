{
    "name": "jliglesias/laravel-azure-mailer",
    "description": "Provides Microsoft Azure ACS integration for laravel. Azure Communication Services allows you to easily add real-time multimedia voice, video, and telephony-over-IP communications features to your applications. The Communication Services Email client libraries also allow you to add chat and EMAIL functionality to your communications solutions.",
    "homepage": "https://github.com/jliglesias/azure-email-communicator",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": ["azure", "php", "azure communication service", "microsoft", "email", "driver", "mailer", "laravel", "symfony"],
    "require": {
        "php": ">=8.2",
        "laravel/framework": "^10.0|^11.0",
        "symfony/mailer": "^6.4|^7.0"
    },
    "authors": [
        {
            "name": "Juan Luis Iglesias",
            "email": "jliglesias@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Avantia\\Azure\\Mailer\\": "src"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Avantia\\Azure\\Mailer\\MailerServiceProvider"
            ]
        }
    }
}